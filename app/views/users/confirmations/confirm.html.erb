<h2>利用者情報を確認する</h2>

<!--<%#= form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f| %>-->
<%= form_for @user, url: { action: 'confirm' }, html: { class: "form-table" } do |f| %>
  <%= f.hidden_field :confirmation_token %>
  <%= f.hidden_field :confirmed_at, value: Time.zone.now %>

  <table class="table">
    <tr>
      <th><%= f.label t('.password') %></th>
      <td>
        <%= f.hidden_field :password %>
        <%#= @user.password %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.password_confirmation') %></th>
      <td>
        <%= f.hidden_field :password_confirmation %>
        <%#= @user.password_confirmation %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.user_name') %></th>
      <td>
        <%= f.hidden_field :user_name %>
        <%= @user.user_name.to_s %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.nick_name') %></th>
      <td>
        <%= f.hidden_field :nick_name %>
        <%= @user.nick_name %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.family_name') %></th>
      <td>
        <%= f.hidden_field :family_name %>
        <%= @user.family_name %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.given_name') %></th>
      <td>
        <%= f.hidden_field :given_name %>
        <%= @user.given_name %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.phone_number') %></th>
      <td>
        <%= f.hidden_field :phone_number %>
        <%= @user.phone_number %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.company_name') %></th>
      <td>
        <%= f.hidden_field :company_name %>
        <%= @user.company_name %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.education') %></th>
      <td>
        <%= f.hidden_field :education %>
        <%= @user.education %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.age') %></th>
      <td>
        <%= f.hidden_field :age %>
        <%= @user.age_i18n %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.gender') %></th>
      <td>
        <%= f.hidden_field :gender %>
        <%= @user.gender_i18n %>
      </td>
    </tr>
    <tr>
      <th><%= f.label t('.residential_area') %></th>
      <td>
        <%= f.hidden_field :residential_area %>
        <%= @user.prefecture.name %>
      </td>
    </tr>
